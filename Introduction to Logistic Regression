#zero model
zm = adult_data.Label.value_counts()[0]/(adult_data.Label.value_counts()[0]+adult_data.Label.value_counts()[1])
print(f'Zero Model Performance = {zm:.1%}')

#zero model
zm = adult_data.Label.value_counts()[0]/(adult_data.Label.value_counts()[0]+adult_data.Label.value_counts()[1])
print(f'Zero Model Performance = {zm:.1%}')
